<%- include ../layouts/header.ejs %>

    <div class="card bg-secondary text-white">

        <div class="card-header text-center display-4">
            AGREGAR NUEVO LIBRO
        </div>
        <br>

        <div class="card-body">

            <form method="post" action="/libros" enctype="multipart/form-data">

                <div class="form-group mb-3">
                    <label for="my-input text-dark">Titulo</label>
                    <input id="my-input" class="form-control" type="text" name="titulo">
                </div>

                <div class="form-group mb-3">
                    <label for="my-input">Descripcion</label>
                    <input id="my-input" class="form-control" type="text" name="descripcion">
                </div>

                <div class="form-group mb-3">
                    <label for="my-input">Categoria</label>
                    <select name="categoria" id="categoria" class="form-select">
                        <option selected>Selecciona una Opcion</option>
                        <option value="PROGRAMACIÓN">PROGRAMACIÓN</option>
                        <option value="RETROINFORMATICA">ELECTRONICA</option>
                        <option value="ELECTRONICA">RETROINFORMATICA</option>
                        <option value="ROBOTICA">ROBOTICA</option>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label for="my-input">imagen</label>
                    <input id="my-input" class="form-control" type="file" name="imagen">
                </div>

                <button type="submit" class="btn btn-success bi bi-plus-circle"> Agregar</button>
                <a href="/libros" class="btn btn-danger  bi bi-x-octagon"> Cancelar</a>

            </form>
        </div>
    </div>